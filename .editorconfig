# EditorConfig â€” https://editorconfig.org
# Enforces consistent coding standards across IDEs and editors.

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.rs]
indent_size = 4

[*.{toml,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.sh]
indent_size = 2
shell_variant = bash

[*.json]
indent_size = 2
